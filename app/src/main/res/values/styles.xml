<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StatusView">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dimen_8</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="StatusTextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RoomTitleText">
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_8</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RoomText">
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
    </style>

    <style name="RoomImage">
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="android:layout_marginBottom">@dimen/dimen_16</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="BooksRecyclerStyle">
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:paddingTop">@dimen/dimen_4</item>
    </style>


    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="PostNameDetailText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="NumberOfSpotsText">
        <item name="android:drawablePadding">@dimen/dimen_4</item>
        <item name="drawableTint">@android:color/secondary_text_dark</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
    </style>

</resources>